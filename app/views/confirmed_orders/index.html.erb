<p id="notice"><%= notice %></p>

<h1>Listing Confirmed Orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Payment method</th>
      <th>Payment status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @confirmed_orders.each do |confirmed_order| %>
      <tr>
        <td><%= confirmed_order.user_id %></td>
        <td><%= confirmed_order.payment_method %></td>
        <td><%= confirmed_order.payment_status %></td>
        <td><%= link_to 'Show', confirmed_order %></td>
        <td><%= link_to 'Edit', edit_confirmed_order_path(confirmed_order) %></td>
        <td><%= link_to 'Destroy', confirmed_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Confirmed order', new_confirmed_order_path %>
