<p id="notice"><%= notice %></p>

<h1>Listing Orderlines</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Food ID</th>
      <th>Order ID</th>
      <th>Quantity</th>
      <th>Cost</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orderlines.each do |orderline| %>
      <tr>
        <td><%= orderline.food_id %></td>
        <td><%= orderline.order_id %></td>
        <td><%= orderline.quantity %></td>
        <td><%= orderline.cost %></td>
        <td><%= orderline.comment %></td>
        <td><%= link_to 'Show', orderline %></td>
        <td><%= link_to 'Edit', edit_orderline_path(orderline) %></td>
        <td><%= link_to 'Destroy', orderline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

