<p id="notice"><%= notice %></p>

<style>
body{
        background-image: url(/assets/dark.jpeg);
      padding:50px;
    }
table{
  color:black;
  background-color: grey;
}
.text{
  color:black;
}
</style>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Kind</th>
      <th>Points</th>
      <th>Nooforders</th>
      <th>Email</th>

      <th>Dob</th>
      <th>Gender</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Tokens</th>
      <th>Admin</th>
	  <th>Set Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.fname %></td>
        <td><%= user.lname %></td>
        <td><%= user.kind %></td>
        <td><%= user.points %></td>
        <td><%= user.nooforders %></td>
        <td><%= user.email %></td>


        <td><%= user.dob %></td>
        <td><%= user.gender %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
        <td><%= user.tokens %></td>
        <td><%= user.admin %></td>
		<td><%= link_to 'Adminize',make_admin_user_path(user), :class => "btn btn-default btn-xs text" %></td>
        <td><%= link_to 'Show', user, :class => "btn btn-default btn-xs text" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-default btn-xs text"%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-xs text"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

